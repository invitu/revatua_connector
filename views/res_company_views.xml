<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_revatua" model="ir.ui.view">
        <field name="name">res.company.form.revatua</field>
        <field name="model">res.company</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Revatua Infos">
                    <group colspan="4">
                        <field name="revatua_endpoint"/>
                        <field name="revatua_scope"/>
                        <field name="revatua_client_id"/>
                        <field name="revatua_client_secret"/>
                        <field name="revatua_oauth_access_token"/>
                        <field name="revatua_token_expiry_date"/>
                        <button name="get_token" string="Get token" type="object" icon="fa-check"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
